{
  "name": "@sbb-esta/lyne-components",
  "version": "0.40.11",
  "description": "Lyne Design System",
  "keywords": [
    "design system",
    "web components",
    "stencil",
    "storybook"
  ],
  "author": "Lyne Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyne-design-system/lyne-components.git"
  },
  "bugs": {
    "url": "https://github.com/lyne-design-system/lyne-components/issues"
  },
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "dist/types/index.d.ts",
  "customElements": "dist/custom-elements.json",
  "files": [
    "dist/",
    "_index.scss",
    "src/components/core/**/*.scss"
  ],
  "scripts": {
    "postinstall": "yarn playwright install",
    "build:components": "vite build",
    "build:storybook": "storybook build --quiet",
    "build:chromatic-stories": "tsx ci/chromatic-stories-generator.ts",
    "build": "npm-run-all --sequential build:components build:storybook",
    "docs": "npm-run-all --sequential docs:manifest docs:to-md",
    "docs:manifest": "custom-elements-manifest analyze --litelement",
    "docs:to-md": "tsx ci/docs_generate.ts",
    "format": "prettier \"**/*\" --write --ignore-unknown",
    "generate": "tsx tools/generate-component/index.mts",
    "integrity": "npm-run-all format docs",
    "lint": "npm-run-all --sequential lint:*",
    "lint:ts": "eslint \"**/*.{ts,tsx}\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint:yml": "eslint \"**/*.{yml,yaml}\"",
    "lint:styles": "stylelint \"**/*.scss\"",
    "lint:lit": "yarn lit-analyzer \"src/components/**/*.tsx\"",
    "lint:circular-imports": "madge --circular --extensions ts,tsx ./",
    "start": "storybook dev -p 6006",
    "test": "wtr --coverage --group default",
    "test:spec": "wtr --group spec",
    "test:spec-snapshot": "yarn -S test:spec --update-snapshot",
    "test:e2e": "wtr --group e2e",
    "prepare": "husky install"
  },
  "dependencies": {
    "lit": "3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@open-wc/lit-helpers": "^0.6.0",
    "@open-wc/testing": "^3.2.0",
    "@sbb-esta/lyne-design-tokens": "^0.3.5",
    "@storybook/addon-a11y": "^7.5.1",
    "@storybook/addon-actions": "^7.5.1",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-interactions": "^7.5.1",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/blocks": "^7.5.1",
    "@storybook/builder-vite": "^7.5.1",
    "@storybook/jest": "0.2.3",
    "@storybook/testing-library": "0.2.2",
    "@storybook/web-components": "^7.5.1",
    "@storybook/web-components-vite": "^7.5.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.8.8",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@web/test-runner": "^0.17.1",
    "@web/test-runner-commands": "^0.8.0",
    "@web/test-runner-playwright": "^0.10.1",
    "@web/test-runner-puppeteer": "^0.14.0",
    "chromatic": "7.5.4",
    "date-fns": "2.30.0",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-lit": "^1.10.1",
    "eslint-plugin-lyne": "file:tools/eslint/link/",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-yaml": "0.5.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jsx-dom": "^8.0.7",
    "lint-staged": "^15.0.2",
    "lit-analyzer": "^2.0.1",
    "madge": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.38.1",
    "postcss": "^8.4.28",
    "prettier": "3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-postcss-lit": "^2.1.0",
    "sass": "^1.63.6",
    "sinon": "^17.0.1",
    "storybook": "^7.5.1",
    "stylelint": "15.11.0",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-standard-scss": "11.0.0",
    "stylelint-scss": "5.2.1",
    "ts-lit-plugin": "^2.0.0",
    "tsx": "3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.3"
  },
  "resolutions": {
    "jackspeak": "2.1.1",
    "lit": "3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Bug Fixes"
      },
      {
        "type": "refactor",
        "section": "Refactorings"
      },
      {
        "type": "perf",
        "hidden": "Performance"
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,json,md,html,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,yaml,yml}": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  }
}
