{
  "name": "@sbb-esta/lyne-components",
  "version": "0.1.2",
  "description": "Lyne Design System",
  "keywords": [
    "design system",
    "web components",
    "stencil",
    "storybook"
  ],
  "author": "Lyne Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyne-design-system/lyne-components.git"
  },
  "bugs": {
    "url": "https://github.com/lyne-design-system/lyne-components/issues"
  },
  "engines": {
    "node": ">=14.0.0 <15.0.0",
    "yarn": ">= 1.0.0",
    "npm": "Please use Yarn instead of NPM to install dependencies. See: https://yarnpkg.com/lang/en/docs/install/"
  },
  "files": [
    "dist/",
    "loader/",
    "hydrate"
  ],
  "scripts": {
    "build:stencil": "stencil build --ci --prod --docs",
    "build:storybook": "build-storybook --quiet",
    "build": "npm-run-all --sequential build:stencil build:storybook",
    "chromatic": "chromatic --storybook-build-dir=./storybook-static --exit-zero-on-changes --exit-once-uploaded",
    "chromatic:master": "chromatic --storybook-build-dir=./storybook-static --exit-zero-on-changes --auto-accept-changes",
    "generate": "node convenience/generate-component/index.js",
    "format": "prettier \"**/*\" --write --ignore-unknown",
    "lint": "npm-run-all --sequential lint:*",
    "lint:ts": "eslint \"**/*.{ts,tsx}\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint:yml": "eslint \"**/*.{yml,yaml}\"",
    "start:stencil": "stencil build --prod --watch --docs",
    "start:storybook": "start-storybook -p 6006 -s dist",
    "start": "npm-run-all --sequential build:stencil --parallel start:stencil start:storybook",
    "test:dev": "stencil test --spec --e2e --coverage",
    "test:prod": "stencil test --prod --spec --e2e --coverage",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "7.18.5",
    "@babel/plugin-syntax-jsx": "7.17.12",
    "@babel/plugin-transform-react-jsx": "7.17.12",
    "@brightlayer-ui/storybook-rtl-addon": "1.1.0",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@sbb-esta/lyne-design-tokens": "0.1.7",
    "@stencil/core": "2.17.0",
    "@stencil/sass": "1.5.2",
    "@storybook/addon-a11y": "6.5.9",
    "@storybook/addon-essentials": "6.5.9",
    "@storybook/html": "6.5.9",
    "@types/jest": "27.5.2",
    "@types/puppeteer": "5.4.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "axios": "0.27.2",
    "babel-loader": "8.2.5",
    "chromatic": "6.6.3",
    "esbuild": "0.14.47",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-jsx-a11y": "6.6.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-yaml": "0.5.0",
    "focus-visible": "5.2.0",
    "glob": "8.0.3",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "jsx-dom": "7.0.4",
    "jsx-transform": "2.4.1",
    "lint-staged": "13.0.3",
    "lyne-helper-trigger-travis": "1.0.6",
    "lyne-icons": "4.34.2",
    "minimist": "1.2.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "puppeteer": "15.1.1",
    "shelljs": "0.8.5",
    "simple-git": "3.10.0",
    "standard-version": "9.5.0",
    "stencil-inline-svg": "1.1.0",
    "storybook-addon-breakpoints": "1.0.0",
    "typescript": "4.7.4",
    "yargs": "17.5.1"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/lyne-components/",
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,yaml,yml}": [
      "eslint --fix"
    ]
  }
}
