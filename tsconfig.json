{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /** linting **/
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,

    "types": ["jsx-dom", "mocha"],

    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          // The following rules are broken
          "no-incompatible-type-binding": "off",
          "no-property-visibility-mismatch": "off",

          // The following rules cannot be used, due to internal constraints
          // Reason: We use e.g. sbb-tooltip-close as indicators of close origins for overlays
          "no-unknown-attribute": "off"
        }
      }
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "node_modules/lit-scss-loader/types.d.ts"]
}
